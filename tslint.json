{
  "defaultSeverity": "error",
  "extends": [
       "tslint-eslint-rules",
       "tslint-config-airbnb",
       "tslint-react"
   ],
  "jsRules": {
    "prefer-arrow-callback": false
  },
  "rules": {
    "semicolon": [
      true,
      "never",
    ],
    "only-arrow-functions": false,
    "prefer-arrow-callback": false,
    "import-name": false,
    "jsx-boolean-value": ["never"],
    "variable-name": [true, "allow-pascal-case"],
    "space-before-function-paren": [true, "never"]
  }
}
